<%- contentFor('body') %>

  <div id="notification-product" class="notification-product" data-product_id="<%= opt.product._id %>" data-store_id="<%= opt.storeId %>"
    data-criterias="<%= opt.criterias %>">
    <form id="notification-form" class="card--offer" style="display: none;" id="submit" type="submit">
      <div class="form-row">
        <div class="col-sm-12 mt-2">
          <label class="sr-only" for="input-name">Nome</label>
          <input type="text" class="form-control" id="input-name" name="customer_name" placeholder="Seu nome"
            required="true">
        </div>
        <div class="col-sm-12 mt-3">
          <label class="sr-only" for="input-email">E-mail</label>
          <div class="input-group mb-2">
            <input type="email" class="form-control" id="input-email" name="customer_email"
              placeholder="e-mail@e-mail.com" required="true">
          </div>
        </div>
        <div class="col-sm-12 mt-2">
          <button id="offers-submit" class="btn btn-success btn-block">Me avise</button>
        </div>
      </div>
      <input type="hidden" class="form-control" name="customer_criterias" value="<%= opt.criterias %>">
      <input type="hidden" class="form-control" name="product_id" value="<%= opt.product._id %>">
    </form>
  </div>
  <span style="display: none" id="offer_success">
    <div class="alert" role="alert">
      Pronto, você será notificado!
    </div>
  </span>
  <div id="recaptcha" class="g-recaptcha" data-sitekey="<%= opt.recaptchKey %>" data-callback="onSubmit"
    data-size="invisible"></div>
